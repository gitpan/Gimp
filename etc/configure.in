#GTK_LIBS="`$GTKCONFIG --libs`"

AC_CHECK_PROGS(PERL,perl5.004_04 perl5.004 perl5 perl,perl)
AC_CHECK_PROGS(GIMP,gimp,gimp)

eval `$PERL -V:cc`
: ${CC=$cc}

AC_CHECK_FUNCS(vsnprintf,,[
   AC_MSG_WARN(vsnprintf not found.. I hope you are using gcc...)
])

